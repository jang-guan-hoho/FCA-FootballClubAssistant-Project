<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fca.model.dao.BoardDao">
    <!-- 전체글 조회 -->
    <select id="clubBoard" resultType="Board">
        SELECT *
        FROM board;
    </select>

    <!-- 상세글 조회 -->
    <select id="clubBoardDetail" parameterType="int" resultType="Board">
        SELECT *
        FROM board
        WHERE boardId = #{boardId};
    </select>

    <!-- 게시글 등록 -->
    <insert id="clubBoardCreate" parameterType="Board">
        INSERT INTO board (title,
        content)
        VALUES (#{title}, #{content})
    </insert>

    <!-- 게시글 삭제 -->
    <delete id="clubBoardDelete" parameterType="int">
        DELETE FROM board
        WHERE boardId
        = #{boardId}
    </delete>

    <!-- 게시글 수정 -->
    <update id="clubBoardUpdate" parameterType="board">
        UPDATE board
        SET title =
        #{title}, content = #{content}
        WHERE boardId = #{boardId}
    </update>
</mapper>